@import "pallete"
@import "login"
@import "loading"
@import "fonts"
@import "forms"
@import "autocomplite"
@import "date-picker"
@import "header"
@import "payments"
@import "modifier"
@import "settings"
@import "slider"

body
  font-size 20px
  font-family Monserrat
  margin 0
  box-sizing border-box
  background-color #2f6fad
  background-attachment fixed
  background-size cover

.main_wrap
  display flex
  margin 40px auto 0
  width 100%
  justify-content space-around
  min-height 825px

.left-aside,
.right-aside
  min-width 350px
  box-shadow -1px 1px 28px 5px #b1b0bd
  border-radius 5px
  background-color: $color-aside
  text-align center
  margin 0 auto

.header
  display: flex
  justify-content space-around
  color #ebebeb

.left-aside
  width 400px
  max-height 900px

.right-aside
  width 40%

.category_wrap
  margin 10px
  display flex
  flex-wrap: wrap;

.category
  margin 10px 0
  width 270px
  height 90px
  display flex
  justify-content space-evenly

.fixed-popup
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color $color-grey-background

.popover
  min-width 200px
  padding 7px
  background-color #f3f3f3
  border 1px solid darkgray
  border-radius 5%
  animation popup-fade-in 0.3s linear

.error-block
  width 90%
  background-color #f88485
  opacity 0.8
  height 50px
  border 1px solid #c9a9ac
  text-align left
  padding-left 15px
  border-radius 10px
  color #252525
  line-height 50px
  virtical-align: middle
  margin-top 5%
  margin-left 5%

.teaser
  width 90%
  background-color #d3cfd1
  border-radius 5px
  margin-left 3%
  margin-top 2%
  margin-bottom 2%
  text-align left
  line-height 30px
  padding:2%

.sum-block
  display: flex;
  justify-content: space-evenly;
  margin-left: 3%;

.sum-block input
  width: 25px;
  height: 25px;


.sum-block-checkbox
  width: 25px;
  height: 25px;
  align-self: center;

.invoice-form-group
  display: flex
  flex-direction: row-reverse
  justify-content: flex-end
  margin-left: 3%