.admin-login {
  width: 375px;
  margin: 275px auto;
  box-shadow: 0 0 100px #000;
  border-radius 5px
}

.admin-login_header {
  padding-top: 15px;
  margin-bottom: 10px;
  text-align: center;
  font-size: 1.3em;
  color: #757575;
  img {
    background-color: #222;
    vertical-align: middle;
    margin: 0 2px;
    height: 25px;
  }
}

.-login-wrapper
  display: block !important

.-login-label
  min-height 0 !important

.admin-login-buttons-left
  width: 150px
  float: left
  margin-left: 17px

.admin-login-buttons-right
  float: right
  margin-right: 53px